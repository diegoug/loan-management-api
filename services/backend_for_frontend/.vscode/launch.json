    "version": "0.2.0",
    "configurations": [
        {
            "name": "RunServer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:80",
                "--noreload"
            ],
            "django": true,
            "justMyCode": false
        },{
            "name": "Migrate default",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "migrate",
                "--database=default"
            ],
            "django": true
        },{
            "name": "Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
            ],
            "django": true,
            "justMyCode": false
        }
    ]
}
